extends layout

block content

    body
        main.container(role="main")
            .container.theme-showcase
                .page-header

                div.main.container

                    div.row
                        div.col-md-12
                            each task in tasks
                                a.list-group-item.list-group-item-action(href='/tasks/' + task.id + '/view' style={'margin-bottom': '10px'})
                                    .d-flex.w-100.justify-content-between
                                        h5.mb-1 #{task.name}
                                        
                                    p.mb-1
                                        |  #{task.description}

                                    hr
                                    p.mb-1
                                    
                    if !tasks.length
                        div.col-md-12
                            p Seems like you do not have any tasks.
                            p Enjoy your free day.


